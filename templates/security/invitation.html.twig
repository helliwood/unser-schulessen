{% extends 'clear.html.twig' %}

{% block body %}
    <div class="login-box row no-gutters bg-white">
        <div class="d-none d-md-flex col-6 login-teaser"></div>
        <div class="col-12 col-md-6 login-form">
            <img alt="Vernetzungsstelle Schulverpflegung {{ app_state_country|trans }}" src="{{ logo }}" class="vsvb"/>
            <h2 class="text-center text-primary text-uppercase">Portal<br/>Unser Schulessen</h2>
            <p class="text-muted text-center">Herzlich Willkommen {{ user.displayName }},<br/><br/>
                Sie wurden von <strong>{{ school.name }}</strong> aus {{ school.address.city }} zu "Unser Schulessen"
                eingeladen!
            </p>
            {% if form %}
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                {{ form_widget(form) }}
                <div class="form-group row">
                    <div class="col-sm-3"></div>
                    <div class="col-sm-9 d-flex">
                        <button type="submit" id="save" name="save" class="btn-primary btn">Speichern</button>
                    </div>
                </div>
                {{ form_end(form) }}
            {% else %}
                <p class="text-muted text-center">
                    <a href="/login" class="btn btn-primary">Anmelden</a>
                </p>
            {% endif %}
            <img src="/img/BMLEH_Fz_2025_WebSVG_de.svg" class="BMELV"/>
        </div>
    </div>
{% endblock %}
