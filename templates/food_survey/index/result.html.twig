{% extends 'base.html.twig' %}

{% block body %}
    <div>
        <div class="print">
            <h1>{{ school }}: Teller-Check-Ergebnis vom {{ foodSurvey.getClosesAt|date("d.m.Y") }}</h1>
        </div>

        <div class="panel">
            <button class="btn btn-primary mt-1 no-print" style="position: absolute; right: 50px; top: 100px;"
                    onclick="window.print();">
                <i class="fas fa-print mr-1"></i>Drucken
            </button>
            <div class="row d-flex">
                <div class="col-12 col-lg-6">
                    <img src="{{ path('food_survey_image', {id:foodSurvey.id, spots:1}) }}" class="img-fluid"/>
                </div>
                <div class="col-12 col-lg-6">
                    {% set sum = 0 %}
                    {% set counted = false %}
                    {% for spot in foodSurvey.spots %}
                        <div>
                            <strong>{{ spot.order }}. {{ spot.name }}</strong>
                            <apexchart type=pie
                                       height=200
                                       :options="{
                                               labels: ['{{ spot.stats | keys | join("', '") }}'],
                                               colors: ['#a9a9a9', '#de543d', '#28a745', '#4F6D7A', '#C0D6DF', '#000000', '#993955', '#AE76A6', '#ff8000', '#C0DFA1'],
                                               responsive: [{
                                               breakpoint: 480,
                                               options: {
                                               chart: {
                                               width: 200
                                               },
                                               legend: {
                                               position: 'bottom'
                                               },
                                               }
                                               }],
                                               }"
                                       :series="[{{ spot.stats | join(",") }}]"/>
                        </div>
                        {% if counted == false %}
                            {% for element in spot.stats %}
                                {% set sum = sum + element %}
                            {% endfor %}
                            {% set counted = true %}
                        {% endif %}
                    {% endfor %}
                </div>
            </div>

            <div class="d-flex flex-row justify-content-end no-print mt-auto ">
                <div class="d-flex flex-row">
                    <p><strong>Anzahl: {{ sum }}</strong></p>
                </div>
            </div>
            <div class="d-flex flex-row justify-content-end no-print mt-auto ">
                <div class="d-flex flex-row">
                    <a href="{{ path('food_survey_home') }}" class="btn btn-warning mt-1 ml-2 no-print">Zur√ºck</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
